<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ScaleBar">
        <!--刻度颜色-->
        <attr name="scale_color" format="color"/>
        <!--刻度条颜色-->
        <attr name="bar_color" format="color"/>
        <!--刻度最大值-->
        <attr name="max_value" format="integer"/>
        <!--最小值-->
        <attr name="min_value" format="integer"/>
        <!--几等分-->
        <attr name="scale_count" format="integer"/>
        <!--标题-->
        <attr name="title" format="string"/>
        <!--标题预留的空间-->
        <attr name="title_height" format="integer"/>
        <!--方向：水平、垂直-->
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="CompassView">
        <!--Marker的颜色-->
        <attr name="marker_color" format="color"/>
        <!--Text的颜色-->
        <attr name="text_color" format="color"/>
        <!--大圆的颜色-->
        <attr name="circle_color" format="color"/>
        <!--中心园的颜色-->
        <attr name="center_circle_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <!--边框的颜色-->
        <attr name="border_color" format="color"/>
        <!--边框的粗细-->
        <attr name="border_size" format="integer"/>
        <!--矩形的颜色-->
        <attr name="rect_color" format="color"/>
        <!--文本的颜色-->
        <attr name="text_color_p" format="color"/>
        <!--文本大小-->
        <attr name="text_size" format="integer"/>
        <!--方向：水平、垂直-->
        <attr name="orientation_p">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LevelStreamView">
        <attr name="grid_count" format="integer"/>
        <attr name="grid_color" format="color"/>
        <attr name="unit" format="string"/>
        <attr name="unit_color" format="color"/>
        <!--<attr name="font_size" format="integer"/>-->
        <attr name="scroll_count" format="integer"/>
        <attr name="level_line_color" format="color"/>


    </declare-styleable>

</resources>